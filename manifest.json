{
  "manifest_version": 2,
  "name": "CardDataDetector",
  "description": "App Icon turns green when a .png url contains Card Data",
  "version": "0.1",
  "permissions": [

  ],
  "browser_action": {
    "default_title": "",
    "default_popup": ""
  },
  "options_page": "",
  "background": {
    "scripts": [
      "build-background.js"
    ]
  },
  "icons": {
    "128": "styles/icon-large.png",
    "16": "styles/icon-disabled.png",
    "48": "styles/icon-disabled.png"
  },
  "content_scripts": [
    {
      "matches": [        
        "*://*/*.png",
        "*://*/*.png?*",
        "*://*/*.png?",
        "*://*/*.png#*",
        "*://*/*.png/"
      ],
      "js": [
        "build-png_page.js"   
      ],
      "css": [        
      ],
      "run_at": "document_idle"
    }    
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
